# Required: Your Meraki Dashboard API key
# This can be set as either MERAKI_API_KEY or MERAKI_EXPORTER_API_KEY
MERAKI_API_KEY=your_api_key_here

# Optional: Specific organization ID (leave empty to collect from all accessible orgs)
MERAKI_EXPORTER_ORG_ID=

# Optional: Scrape interval in seconds (default: 300)
MERAKI_EXPORTER_SCRAPE_INTERVAL=300

# Optional: API timeout in seconds (default: 30)
MERAKI_EXPORTER_API_TIMEOUT=30

# Optional: Host and port to bind to
MERAKI_EXPORTER_HOST=0.0.0.0
MERAKI_EXPORTER_PORT=9090

# Optional: Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
MERAKI_EXPORTER_LOG_LEVEL=INFO

# Optional: Device types to collect (comma-separated: MS,MR,MV,MT,MX,MG)
# Default: MS,MR,MV,MT
# Set to empty to disable device metrics collection
# MERAKI_EXPORTER_DEVICE_TYPES=MS,MR,MV,MT

# Optional: OpenTelemetry configuration
MERAKI_EXPORTER_OTEL_ENABLED=false
MERAKI_EXPORTER_OTEL_ENDPOINT=http://localhost:4317
MERAKI_EXPORTER_OTEL_SERVICE_NAME=meraki-dashboard-exporter